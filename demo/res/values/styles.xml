<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MatchWidth" parent="Wrap">
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="MatchHeight" parent="Wrap">
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="HeaderTextView" parent="Wrap">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CheckableTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@drawable/check_text_view_bg</item>
        <item name="android:checkMark">@null</item>
        <item name="android:textSize">11sp</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>